$(LIBCROCO_SOURCE):
	curl -OL http://ftp.gnome.org/pub/GNOME/sources/libcroco/$(LIBCROCO_MINOR_VERSION)/$(LIBCROCO_SOURCE)

$(LIBCROCO): $(LIBCROCO_SOURCE) $(LIBXML2) $(GLIB)
	tar xf $<
	cd libcroco*
	$(CONFIGURE) \
		--disable-gtk-doc \
		--disable-gtk-doc-html
	make
	make install

