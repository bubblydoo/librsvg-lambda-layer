	--enable-shared \
	--disable-gtk-doc \
	--disable-man \
	--disable-libmount \
	--disable-fam \
	--disable-libelf \
	--disable-xattr \
	--disable-installed-tests \
	--with-pcre=internal
# make
# make install

## libxml2

LIBXML2_SOURCE=libxml2-$(LIBXML2_VERSION).tar.gz
LIBXML2=$(CACHE_DIR)/lib/libxml2.a
$(LIBXML2_SOURCE):
	curl -LO ftp://xmlsoft.org/libxml2/$(LIBXML2_SOURCE)

$(LIBXML2): $(LIBXML2_SOURCE)
	tar xf $<
	cd libxml2*
	$(CONFIGURE) \
		--without-history \
		--without-python
	make
	make install

## licroco

LIBCROCO_SOURCE=libcroco-$(LIBCROCO_VERSION).tar.xz
